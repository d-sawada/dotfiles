[
  // Disable Default Setting
  { "key": "cmd+k cmd+s", "command": "-workbench.action.openGlobalKeybindings" },
  { "key": "ctrl+1", "command": "-workbench.action.openEditorAtIndex1" },

  // Global
  { "key": "shift+alt+[",         "command": "workbench.action.openGlobalKeybindingsFile" }, // keybindings.jsonを開く
  { "key": "shift+alt+[IntlYen]", "command": "workbench.action.openSettingsJson" },          // settings.jsonを開く
  { "key": "shift+alt+[Equal]",   "command": "workbench.action.openWorkspaceConfigFile" },   // workspace設定を開く

  // Editor
  { "when": "editorTextFocus", "key": "ctrl+;",       "command": "workbench.action.terminal.focus" }, // ターミナルに移動
  { "when": "editorTextFocus", "key": "ctrl+p",       "command": "workbench.action.pinEditor" },      // ファイルをピン留め
  { "when": "editorTextFocus", "key": "ctrl+shift+p", "command": "workbench.action.unpinEditor" },    // ファイルをピン留め解除
  { "when": "editorTextFocus", "key": "ctrl+f",       "command": "editor.toggleFold" },

  // Terminal
  { "when": "terminalFocus", "key": "ctrl+;",         "command": "workbench.action.focusFirstEditorGroup" },         // エディターに移動
  { "when": "terminalFocus", "key": "cmd+t",          "command": "workbench.action.terminal.newInActiveWorkspace" }, // タブ作成
  { "when": "terminalFocus", "key": "cmd+w",          "command": "workbench.action.terminal.kill" },                 // タブ削除
  { "when": "terminalFocus", "key": "ctrl+tab",       "command": "workbench.action.terminal.focusNext" },            // 次のタブへ
  { "when": "terminalFocus", "key": "ctrl+shift+tab", "command": "workbench.action.terminal.focusPrevious" },        // 前のタブへ
  { "when": "terminalFocus", "key": "cmd+up",         "command": "workbench.action.toggleMaximizedPanel" }           // タブ最大化・解除
]
